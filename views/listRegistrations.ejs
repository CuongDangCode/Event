<!DOCTYPE html>
<html>
<head>
  <title>Event Registrations</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f4f8fb; min-height: 100vh; }
    .container-custom {
      max-width: 800px;
      margin: 40px auto;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 24px rgba(0,0,0,0.07);
      padding: 32px 28px 24px 28px;
    }
    h2 {
      color: #007bff;
      font-weight: 700;
      margin-bottom: 28px;
      text-align: center;
    }
    table {
      background: #f8faff;
      border-radius: 8px;
      overflow: hidden;
      margin-bottom: 0;
    }
    th {
      background: #007bff;
      color: white;
      font-weight: 600;
      text-align: center;
    }
    td {
      text-align: center;
      vertical-align: middle;
    }
    .empty {
      text-align: center;
      padding: 24px;
      background: #f8faff;
      border-radius: 8px;
      color: #888;
      font-size: 1.1rem;
      margin-top: 24px;
    }
  </style>
</head>
<body>
  <div class="container-custom">
    <h2>Danh sách đăng ký</h2>
    <% if (registrations.length === 0) { %>
      <div class="empty">Chưa có sinh viên nào đăng ký</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-bordered align-middle">
          <thead>
            <tr><th>Tên sinh viên</th><th>Tên sự kiện</th><th>Ngày đăng ký</th></tr>
          </thead>
          <tbody>
            <% registrations.forEach(r => { %>
              <tr>
                <td><%= r.studentId.username %></td>
                <td><%= r.eventId.name %></td>
                <td><%= r.registrationDate.toLocaleString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
    <button onclick="window.history.back()" class="btn btn-outline-primary w-100 mt-3">Quay về trang trước</button>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
